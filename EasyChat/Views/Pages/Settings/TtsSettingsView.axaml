<UserControl x:Class="EasyChat.Views.Pages.Settings.TtsSettingsView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:suki="https://github.com/kikipoulet/SukiUI"
             xmlns:viewModels="clr-namespace:EasyChat.ViewModels.Pages"
             xmlns:lang="clr-namespace:EasyChat.Lang;assembly=EasyChat"
             x:DataType="viewModels:SettingViewModel"
             mc:Ignorable="d">
    <suki:GlassCard>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="30" Margin="0 5 0 5">
                <TextBlock FontWeight="Bold" VerticalAlignment="Center"
                           Text="{x:Static lang:Resources.TransEngine}" />
                <!-- Using TransEngine label for Provider/Engine -->
                <ComboBox ItemsSource="{Binding TtsProviders}"
                          SelectedItem="{Binding SelectedTtsProvider}"
                          MinWidth="150" />
            </StackPanel>
            
            <Button Content="Configure Voices" 
                    Command="{Binding ConfigureTtsCommand}" 
                    HorizontalAlignment="Left"
                    Classes="Flat"
                    Margin="0,5,0,0"/>
        </StackPanel>
    </suki:GlassCard>
</UserControl>

<UserControl x:Class="EasyChat.Views.Pages.Settings.SelectionTranslationSettingsView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:suki="https://github.com/kikipoulet/SukiUI"
             xmlns:viewModels="clr-namespace:EasyChat.ViewModels.Pages"
             xmlns:lang="clr-namespace:EasyChat.Lang;assembly=EasyChat"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:converts="clr-namespace:EasyChat.Converters;assembly=EasyChat"
             xmlns:System="clr-namespace:System;assembly=System.Runtime"
             x:DataType="viewModels:SettingViewModel"
             mc:Ignorable="d">
    <suki:GlassCard>
        <StackPanel>
            <DockPanel Margin="0 0 0 10">
                <TextBlock Text="{x:Static lang:Resources.EnableSelectionTranslation}"
                           VerticalAlignment="Center" FontWeight="Bold" />
                <ToggleSwitch IsChecked="{Binding SelectionTranslationConf.Enabled}"
                              HorizontalAlignment="Right"
                              OnContent="" OffContent="" />
            </DockPanel>
            <StackPanel Orientation="Horizontal" Spacing="30" Margin="0 5 0 5">
                <TextBlock FontWeight="Bold" VerticalAlignment="Center"
                           Text="{x:Static lang:Resources.TransEngine}" />
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <ComboBox SelectedItem="{Binding SelectedSelectionTranslationEngine}"
                              ItemsSource="{Binding TranslationEngineTypes}"
                              MinWidth="150">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <avalonia:MaterialIcon Kind="{Binding Converter={x:Static converts:TranslationEngineStringToIconKindConverter.Instance}}" 
                                                           Width="16" Height="16" />
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"
                                               Foreground="{DynamicResource SukiText}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <Button Classes="Basic" VerticalAlignment="Center"
                            ToolTip.Tip="{x:Static lang:Resources.TranslationEngineInfo}">
                        <avalonia:MaterialIcon Kind="InformationOutline" Width="16" Height="16" 
                                               Foreground="{DynamicResource SukiLowText}"/>
                    </Button>
                </StackPanel>
            </StackPanel>
            
            <!-- AI Model Selection -->
            <StackPanel Orientation="Horizontal" Spacing="30" Margin="0 5 0 5" IsVisible="{Binding IsAiTranslationSelected}">
                <TextBlock FontWeight="Bold" VerticalAlignment="Center"
                           Text="{x:Static lang:Resources.UsingAiModel}" />
                <ComboBox ItemsSource="{Binding ConfiguredModels}"
                          SelectedValue="{Binding SelectionTranslationConf.AiModelId}"
                          SelectedValueBinding="{Binding Id}"
                          MinWidth="150">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Panel Width="20" Height="20">
                                    <Border ClipToBounds="True" CornerRadius="4"
                                            IsVisible="{Binding ModelType, Converter={x:Static converts:AiModelTypeConverters.IsNotCustom}}">
                                        <Image Source="{Binding ModelType, Converter={x:Static converts:AiModelTypeConverters.ToIcon}}"
                                               Stretch="UniformToFill" />
                                    </Border>
                                    <avalonia:MaterialIcon Kind="Robot" Width="20" Height="20"
                                                           IsVisible="{Binding ModelType, Converter={x:Static converts:AiModelTypeConverters.IsCustom}}" />
                                </Panel>
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"
                                           Foreground="{DynamicResource SukiText}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
            
            <!-- Machine Translation Provider Selection -->
            <StackPanel Orientation="Horizontal" Spacing="30" Margin="0 5 0 5" IsVisible="{Binding IsMachineTranslationSelected}">
                <TextBlock FontWeight="Bold" VerticalAlignment="Center"
                           Text="{x:Static lang:Resources.MachineTranslation}" />
                <ComboBox SelectedItem="{Binding SelectedMachineTranslationProvider}"
                          ItemsSource="{Binding MachineTransProviders}"
                          MinWidth="150">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Panel Width="20" Height="20">
                                    <Border ClipToBounds="True" CornerRadius="4"
                                            IsVisible="{Binding Converter={x:Static converts:EngineConverters.HasIcon}}">
                                        <Image Source="{Binding Converter={x:Static converts:EngineConverters.ToIcon}}"
                                               Stretch="UniformToFill" />
                                    </Border>
                                    <avalonia:MaterialIcon Kind="Translate" Width="20" Height="20"
                                                           IsVisible="{Binding Converter={x:Static converts:EngineConverters.HasNoIcon}}" />
                                </Panel>
                                <TextBlock Text="{Binding}" VerticalAlignment="Center"
                                           Foreground="{DynamicResource SukiText}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </StackPanel>
    </suki:GlassCard>
</UserControl>

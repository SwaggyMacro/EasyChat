<UserControl x:Class="EasyChat.Views.Pages.HomeView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:suki="https://github.com/kikipoulet/SukiUI"
             xmlns:viewModels="clr-namespace:EasyChat.ViewModels.Pages"
             xmlns:lang="clr-namespace:EasyChat.Lang"
             xmlns:converters="clr-namespace:EasyChat.Converters"
             xmlns:config="clr-namespace:EasyChat.Models.Configuration;assembly=EasyChat"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:DataType="viewModels:HomeViewModel"
             mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30" Spacing="20">



            <!-- Translation Settings Card -->
            <suki:GlassCard>
                <suki:GroupBox>
                    <suki:GroupBox.Header>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <avalonia:MaterialIcon Kind="Cog" Width="20" Height="20" />
                            <TextBlock Text="{x:Static lang:Resources.TransEngine}" 
                                       FontWeight="Bold" VerticalAlignment="Center" />
                        </StackPanel>
                    </suki:GroupBox.Header>
                    <StackPanel Spacing="5">
                        
                        <!-- Trans Engine Type -->
                        <StackPanel Orientation="Horizontal" Spacing="30" Margin="0 5 0 5">
                            <TextBlock FontWeight="Bold" VerticalAlignment="Center" MinWidth="180"
                                       Text="{x:Static lang:Resources.TransEngine}" />
                            <RadioButton GroupName="A" Margin="-25 0 0 0"
                                         IsChecked="{Binding GeneralConfig.TransEngine, 
                                         Converter={x:Static converters:EngineTypeToBoolConverters.AiModel}}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <avalonia:MaterialIcon Kind="Robot" Width="16" Height="16" />
                                    <TextBlock Text="{x:Static lang:Resources.AIEngine}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </RadioButton>
                            <RadioButton GroupName="A"
                                         IsChecked="{Binding GeneralConfig.TransEngine, 
                                         Converter={x:Static converters:EngineTypeToBoolConverters.MachineTrans}}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <avalonia:MaterialIcon Kind="Translate" Width="16" Height="16" />
                                    <TextBlock Text="{x:Static lang:Resources.MachineTranslation}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </RadioButton>
                        </StackPanel>

                        <!-- Using AI Model -->
                        <Grid ColumnDefinitions="Auto,*" IsVisible="{Binding GeneralConfig.TransEngine, Converter={x:Static converters:EngineTypeToBoolConverters.AiModel}}">
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" MinWidth="180">
                                <avalonia:MaterialIcon Kind="Robot" Width="18" Height="18" 
                                                        VerticalAlignment="Center" Opacity="0.7" />
                                <TextBlock Text="{x:Static lang:Resources.UsingAiModel}" 
                                           VerticalAlignment="Center" FontWeight="SemiBold" />
                            </StackPanel>
                             <ComboBox Grid.Column="1" ItemsSource="{Binding ConfiguredModels}"
                                      SelectedValue="{Binding GeneralConfig.UsingAiModelId}"
                                      SelectedValueBinding="{Binding Id}"
                                      HorizontalAlignment="Left" MinWidth="200"
                                      Classes="Outline">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <Panel Width="20" Height="20">
                                                <Border ClipToBounds="True" CornerRadius="4"
                                                        IsVisible="{Binding ModelType, Converter={x:Static converters:AiModelTypeConverters.IsNotCustom}}">
                                                    <Image Source="{Binding ModelType, Converter={x:Static converters:AiModelTypeConverters.ToIcon}}"
                                                           Stretch="UniformToFill" />
                                                </Border>
                                                <avalonia:MaterialIcon Kind="Robot" Width="20" Height="20"
                                                                       IsVisible="{Binding ModelType, Converter={x:Static converters:AiModelTypeConverters.IsCustom}}" />
                                            </Panel>
                                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"
                                                       Foreground="{DynamicResource SukiText}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>
                        
                        <!-- Using Machine Translation -->
                        <Grid ColumnDefinitions="Auto,*" IsVisible="{Binding GeneralConfig.TransEngine, Converter={x:Static converters:EngineTypeToBoolConverters.MachineTrans}}">
                             <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" MinWidth="180">
                                <avalonia:MaterialIcon Kind="Translate" Width="18" Height="18" 
                                                        VerticalAlignment="Center" Opacity="0.7" />
                                <TextBlock Text="{x:Static lang:Resources.UsingMachineTransEngine}" 
                                           VerticalAlignment="Center" FontWeight="SemiBold" />
                            </StackPanel>
                            <ComboBox Grid.Column="1" ItemsSource="{Binding MachineTransProviders}"
                                      SelectedItem="{Binding GeneralConfig.UsingMachineTrans}"
                                      HorizontalAlignment="Left" MinWidth="200"
                                      Classes="Outline">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <Panel Width="20" Height="20">
                                                <Border ClipToBounds="True" CornerRadius="4"
                                                        IsVisible="{Binding Converter={x:Static converters:EngineConverters.HasIcon}}">
                                                    <Image Source="{Binding Converter={x:Static converters:EngineConverters.ToIcon}}"
                                                           Stretch="UniformToFill" />
                                                </Border>
                                                <avalonia:MaterialIcon Kind="Translate" Width="20" Height="20"
                                                                       IsVisible="{Binding Converter={x:Static converters:EngineConverters.HasNoIcon}}" />
                                            </Panel>
                                            <TextBlock Text="{Binding}" VerticalAlignment="Center"
                                                       Foreground="{DynamicResource SukiText}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>

                    </StackPanel>
                </suki:GroupBox>
            </suki:GlassCard>

            <!-- Language Selection Card -->
            <suki:GlassCard>
                <suki:GroupBox>
                    <suki:GroupBox.Header>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <avalonia:MaterialIcon Kind="Web" Width="20" Height="20" />
                            <TextBlock Text="{x:Static lang:Resources.Language}" 
                                       FontWeight="Bold" VerticalAlignment="Center" />
                        </StackPanel>
                    </suki:GroupBox.Header>
                    <StackPanel Spacing="5">
                        <!-- Source Language -->
                        <Grid ColumnDefinitions="Auto,*">
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" MinWidth="180">
                                <avalonia:MaterialIcon Kind="FlagOutline" Width="18" Height="18" 
                                                        VerticalAlignment="Center" Opacity="0.7" />
                                <TextBlock Text="{x:Static lang:Resources.SourceLang}" 
                                           VerticalAlignment="Center" FontWeight="SemiBold" />
                            </StackPanel>
                            <ComboBox Grid.Column="1" 
                                      ItemsSource="{Binding AvailableLanguages}"
                                      SelectedItem="{Binding GeneralConfig.SourceLanguage}"
                                      HorizontalAlignment="Left" MinWidth="200"
                                      Classes="Outline">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <Image Width="20" Height="20" Source="{Binding Icon, Converter={x:Static converters:LanguageFlagConverters.ToIcon}}" />
                                            <TextBlock Text="{Binding DisplayName}" Foreground="{DynamicResource SukiText}" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>
                        
                        <!-- Target Language -->
                        <Grid ColumnDefinitions="Auto,*">
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" MinWidth="180">
                                <avalonia:MaterialIcon Kind="Flag" Width="18" Height="18" 
                                                        VerticalAlignment="Center" Opacity="0.7" />
                                <TextBlock Text="{x:Static lang:Resources.TargetLang}" 
                                           VerticalAlignment="Center" FontWeight="SemiBold" />
                            </StackPanel>
                            <ComboBox Grid.Column="1" 
                                      ItemsSource="{Binding AvailableLanguages}"
                                      SelectedItem="{Binding GeneralConfig.TargetLanguage}"
                                      HorizontalAlignment="Left" MinWidth="200"
                                      Classes="Outline">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <Image Width="20" Height="20" Source="{Binding Icon, Converter={x:Static converters:LanguageFlagConverters.ToIcon}}" />
                                            <TextBlock Text="{Binding DisplayName}" Foreground="{DynamicResource SukiText}" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </suki:GroupBox>
            </suki:GlassCard>

            <!-- About Card -->
            <suki:GlassCard>
                <suki:GroupBox>
                    <suki:GroupBox.Header>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <avalonia:MaterialIcon Kind="InformationOutline" Width="20" Height="20" />
                            <TextBlock Text="{x:Static lang:Resources.Manifest}" 
                                       FontWeight="Bold" VerticalAlignment="Center" />
                        </StackPanel>
                    </suki:GroupBox.Header>
                    <StackPanel Spacing="15">
                        <Grid ColumnDefinitions="Auto,*">
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" MinWidth="180">
                                <avalonia:MaterialIcon Kind="Tag" Width="18" Height="18" 
                                                       VerticalAlignment="Center" Opacity="0.7" />
                                <TextBlock Text="{x:Static lang:Resources.CurrentVersion}" 
                                           VerticalAlignment="Center" FontWeight="SemiBold" />
                            </StackPanel>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding CurrentVersion}" 
                                       VerticalAlignment="Center" Opacity="0.8" />
                        </Grid>

                        <Grid ColumnDefinitions="Auto,*">
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" MinWidth="180">
                                <avalonia:MaterialIcon Kind="Update" Width="18" Height="18" 
                                                       VerticalAlignment="Center" Opacity="0.7" />
                                <TextBlock Text="{x:Static lang:Resources.LatestVersion}" 
                                           VerticalAlignment="Center" FontWeight="SemiBold" />
                            </StackPanel>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding LatestVersion}" 
                                       VerticalAlignment="Center" Opacity="0.8" />
                        </Grid>
                    </StackPanel>
                </suki:GroupBox>
            </suki:GlassCard>
        </StackPanel>
    </ScrollViewer>
</UserControl>
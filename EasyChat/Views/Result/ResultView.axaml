<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:suki="https://github.com/kikipoulet/SukiUI"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="EasyChat.Views.Result.ResultView"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        CanResize="False"
        SystemDecorations="None"
        ExtendClientAreaToDecorationsHint="True"
        Topmost="True"
        TransparencyLevelHint="Blur"
        CornerRadius="5"
        Background="Transparent"
        Title="ResultView"
        SizeToContent="WidthAndHeight">

    <Panel Margin="5">
        <suki:GlassCard x:Name="MainCard" Padding="10" Background="Transparent" CornerRadius="5">
            <Panel>
                <suki:Loading x:Name="LoadingIndicator" Width="20" Height="20" IsVisible="True" />
                <TextBlock TextWrapping="Wrap" x:Name="TextBlockResult" IsVisible="False"
                           Foreground="{DynamicResource SukiText}" />
            </Panel>
        </suki:GlassCard>
    </Panel>
</Window>
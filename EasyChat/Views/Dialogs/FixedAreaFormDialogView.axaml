<UserControl x:Class="EasyChat.Views.Dialogs.FixedAreaFormDialogView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:EasyChat.ViewModels.Dialogs"
             xmlns:lang="clr-namespace:EasyChat.Lang;assembly=EasyChat"
             xmlns:suki="https://github.com/kikipoulet/SukiUI"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:DataType="viewModels:FixedAreaFormDialogViewModel"
             Width="380">
    <StackPanel Spacing="20">
        <TextBlock Text="{x:Static lang:Resources.Edit}" FontWeight="SemiBold" FontSize="18" />
        
        <!-- Name Input -->
        <StackPanel Spacing="5">
            <TextBlock Text="{x:Static lang:Resources.Name}" Opacity="0.8" FontSize="12"/>
            <TextBox Text="{Binding Name}" suki:TextBoxExtensions.AddDeleteButton="True" />
        </StackPanel>
        
        <!-- Area Info & Reselect -->
        <suki:GlassCard Padding="10">
            <StackPanel Spacing="10">
                <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                    <avalonia:MaterialIcon Kind="VectorSquare" Opacity="0.7" />
                    <TextBlock Text="{x:Static lang:Resources.Area}" FontWeight="SemiBold" />
                </StackPanel>
                
                <Grid ColumnDefinitions="*, Auto">
                    <TextBlock Grid.Column="0" Text="{Binding DisplayInfo}" 
                               VerticalAlignment="Center" Opacity="0.8" FontFamily="Consolas, Monospace" />
                    
                    <Button Grid.Column="1" Classes="Flat" Command="{Binding ReselectAreaCommand}" ToolTip.Tip="{x:Static lang:Resources.ReselectArea}">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <avalonia:MaterialIcon Kind="Crop" />
                            <TextBlock Text="{x:Static lang:Resources.Select}" />
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
        </suki:GlassCard>
        
        <!-- Actions -->
        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="{x:Static lang:Resources.Save}"
                    Command="{Binding ConfirmCommand}"
                    Classes="Flat Primary" />
            <Button Content="{x:Static lang:Resources.Cancel}"
                    Command="{Binding CancelCommand}" />
        </StackPanel>
    </StackPanel>
</UserControl>

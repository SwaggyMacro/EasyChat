<UserControl x:Class="EasyChat.Views.Dialogs.PromptEditDialogView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:suki="clr-namespace:SukiUI.Controls;assembly=SukiUI"
             xmlns:lang="clr-namespace:EasyChat.Lang;assembly=EasyChat"
             xmlns:dialogs="clr-namespace:EasyChat.ViewModels.Dialogs;assembly=EasyChat"
             x:DataType="dialogs:PromptEditDialogViewModel"
             mc:Ignorable="d"
             Width="600">

    <StackPanel Margin="20" Spacing="20">
        <!-- Title -->
        <TextBlock Text="{x:Static lang:Resources.EditPrompt}"
                   FontSize="22"
                   FontWeight="Bold" />

        <!-- Name Input -->
        <StackPanel Spacing="5">
            <TextBlock Text="{x:Static lang:Resources.PromptName}"
                       FontWeight="SemiBold" />
            <TextBox Text="{Binding Name, Mode=TwoWay}"
                     Watermark="{x:Static lang:Resources.PromptName}" />
        </StackPanel>

        <!-- Content Input -->
        <StackPanel Spacing="5">
            <TextBlock Text="{x:Static lang:Resources.PromptContent}"
                       FontWeight="SemiBold" />
            <TextBox Text="{Binding Content, Mode=TwoWay}"
                     TextWrapping="Wrap"
                     VerticalContentAlignment="Top"
                     AcceptsReturn="True"
                     MinHeight="200"
                     MaxHeight="300"
                     Watermark="{x:Static lang:Resources.PromptContent}" />
        
        <TextBlock Text="{x:Static lang:Resources.PromptParametersHint}" 
                   Classes="Caption" 
                   Opacity="0.7" 
                   TextWrapping="Wrap" />
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="{x:Static lang:Resources.Save}"
                    Classes="Flat"
                    Command="{Binding SaveCommand}" />
            <Button Content="{x:Static lang:Resources.Cancel}"
                    Command="{Binding CancelCommand}" />
        </StackPanel>
    </StackPanel>
</UserControl>

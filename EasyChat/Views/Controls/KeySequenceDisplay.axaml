<UserControl x:Class="EasyChat.Views.Controls.KeySequenceDisplay"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="50"
             x:Name="Root">

    <UserControl.Styles>
        <Style Selector="Border.KeyBorder">
            <Setter Property="Background" Value="{DynamicResource SukiCardBackground}" />
            <Setter Property="BorderBrush" Value="{DynamicResource SukiControlBorderBrush}" />
            <Setter Property="BorderThickness" Value="1 1 1 3" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="8 4" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="BoxShadow" Value="0 2 4 0 #20000000" />
        </Style>
        <Style Selector="TextBlock.KeyText">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="{DynamicResource SukiText}" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Styles>

    <ItemsControl ItemsSource="{Binding Keys, ElementName=Root}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel Orientation="Horizontal" Spacing="4" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Border Classes="KeyBorder">
                    <TextBlock Classes="KeyText" Text="{Binding}" />
                </Border>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>